
@model ProjetoFinal_InforQui.Models.Utilizadores

@{
    ViewBag.Title = "Registar";
}

<br /><br />
<hr />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div style="left:30%; right:30%; position:absolute;">
        <p style="color:#ffffff; background-color:#808080; text-align:center; font-size:20px;">
            <i>Ficha de Inscrições</i>
        </p>
            <table cellspacing="20" style="border:2px solid #00ff90;">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { placeholder = "Nome do utilizador" } })<br />
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "Email do utilizador" } })<br />
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.Morada, new { htmlAttributes = new { placeholder = "Morada do Utilizador" } })<br />
                        @Html.ValidationMessageFor(model => model.Morada, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.CodPostal, new { htmlAttributes = new { placeholder = "Código Postal do Utilizador", @maxlength = "8" } })<br />
                        @Html.ValidationMessageFor(model => model.CodPostal, "", new { @class = "text-danger" })
                    </td>
                </tr>

                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.NIF, new { htmlAttributes = new { placeholder = "NIF do utilizador", @maxlength = "9" } })<br />
                        @Html.ValidationMessageFor(model => model.NIF, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td align="left">

                        @Html.EditorFor(model => model.Contacto, new { htmlAttributes = new { placeholder = "Contacto do utilizador", @maxlength = "9" } })<br />
                        @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        @Html.EditorFor(model => model.Imagem, new { htmlAttributes = new { placeholder = "Imagem do utilizador" } })<br />
                        @Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        <br />
        <div>
            <input type="submit" value="Registar" style="background-color:#00ffff; color:#ffffff; font-size:16px;" />
        </div>
    </div>
}

