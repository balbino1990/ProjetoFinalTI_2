@model IEnumerable<ProjetoFinal_InforQui.Models.Compras_Produtos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Compras_ProdutoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Compras_ProdutoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Nome)
        </td>
        <th>
            (@Html.DisplayNameFor(model => model.Produto.Preco) * @Html.DisplayFor(modelItem => item.Quantidade))
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
       
    </tr>
}

</table>
